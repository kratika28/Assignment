<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/facebook_02" />

    <EditText
        android:id="@+id/edittextselection1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:background="#ffffff"
        android:text="Username" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edittextselection2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edittextselection1"
        android:layout_below="@+id/edittextselection1"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:background="#ffffff"
        android:text="Password" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonselection1"
        android:layout_marginTop="40dp"
        android:text="Forgot Password"
        android:background="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonselection2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonselection1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:text="Sign up" />

    <Button
        android:id="@+id/buttonselection1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextselection2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Login" />

</RelativeLayout>
